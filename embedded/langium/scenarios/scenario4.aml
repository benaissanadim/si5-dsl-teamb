
app foo initial state off {
  // Declaring bricks
  bricks
  Sensor button : 9
  Actuator led    : 11
  Actuator buzzer : 12

  // Declaring states
  states
  firstPush {
    NormalState
    led <= LOW
    buzzer <= HIGH
    button is HIGH => secondPush
  }

   secondPush {
       NormalState
       led <= HIGH
       buzzer <= LOW
       button is HIGH => off
    }

    off {
       NormalState
       led <= LOW
       buzzer <= LOW
       button is HIGH => firstPush
   }
}