app foo initial state off {
  // Declaring bricks
  bricks
  Sensor button1 : 9
  Sensor button2 : 10
  Actuator led  : 11

  // Declaring states
  states
  on {
    led <= HIGH
    ( button1 is LOW and button2 is LOW ) => off
    ( button1 is HIGH and button2 is HIGH ) => error
  }

  off {
    led <= LOW
    ( button1 is HIGH xor button2 is HIGH ) => on
    ( button1 is HIGH and button2 is HIGH ) => error
  }

error {
    errorNumber : 3
    pauseTime : 3
    errorActuator : led
    ( button1 is LOW and button2 is LOW ) => off
    ( button1 is HIGH xor button2 is HIGH ) => on
}
}