
app foo initial state off {
  // Declaring bricks
  bricks
  Sensor button : 9
  Actuator led  : 11
  Actuator buzzer: 12

  // Declaring states
  states
  on {
    NormalState
    led <= HIGH
    buzzer <= HIGH
    button is LOW => off
  }

  off {
    NormalState
    led <= LOW
    buzzer <= LOW
    button is HIGH => on
  }
}
