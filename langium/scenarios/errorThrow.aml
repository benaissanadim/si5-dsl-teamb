app foo initial state off {
  // Declaring bricks
  bricks
  Sensor button1 : 9
  Sensor button2 : 10
  Actuator led  : 11
  Actuator ErrorLed : 13

  // Declaring states
  states
  on {
    NormalState
    led <= HIGH
    ( button1 is LOW and button2 is LOW ) => off
    ( button1 is HIGH and button2 is HIGH ) => error
  }

  off {
    NormalState
    led <= LOW
    ErrorLed <= LOW
    ( button1 is HIGH xor button2 is HIGH ) => on
    ( button1 is HIGH and button2 is HIGH ) => error
  }

error {
    ErrorState
    errorNumber : 3
    pauseTime : 3
    errorActuator : ErrorLed
    ( button1 is LOW and button2 is LOW ) => off
    ( button1 is HIGH xor button2 is HIGH ) => on
}
}